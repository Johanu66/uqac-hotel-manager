#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  # Start server immediately in background
  echo "ðŸš€ DÃ©marrage du serveur Rails..."
  "${@}" &
  SERVER_PID=$!
  
  # Prepare database and seeds in background
  (
    echo "ðŸ”„ PrÃ©paration de la base de donnÃ©es..."
    ./bin/rails db:prepare
    
    echo "ðŸŒ± Chargement des donnÃ©es initiales (seeds)..."
    ./bin/rails db:seed
    
    echo "âœ… Initialisation terminÃ©e !"
  ) &
  
  # Wait for server process
  wait $SERVER_PID
else
  exec "${@}"
fi
